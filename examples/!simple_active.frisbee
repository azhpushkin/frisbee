active A {
    String name;

    fun A(String name) {
        @name = name;
        println("Spawned new A for " + @name);
        
        @say_hello("from constructor");
    }

    fun void say_hello(String to_whom) {
        println(@name + ": Hello " + to_whom);
    }
}

fun void main() {
    A a1 = spawn A("Alice");
    A a2 = spawn A("Bob");
    // a ! say_hello("Stranger");
}


