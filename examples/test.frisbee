from student import Student;


/* 
Ideas around foreach:

foreach(Student s: ss) { ... }

from std import range;
foreach(Int i: range(ss.size())) { ... }

*/

active Main {
    fun Main() {
        [Student] ss = [];
        ss.push(Student("Anton", 24, [4, 5, 3, 2]));
        ss.push(Student("Alina", nil, [5, 5, 4, 5]));
        ss.push(Student("Sasha", 23, [3, 3, 3, 3]));

        Int average = 0;
        Int i = 0;
        while(i < ss.size()) {
            // TODO: += -= *= /=  maybe add later on?
            average = average + ss[i];
            i = i + 1;
        }
        average = average / ss.size();

        print("Average" + average.tostring());
    }
}